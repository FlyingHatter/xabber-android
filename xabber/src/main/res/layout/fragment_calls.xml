<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/calls_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/calls_filler_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/art_welcome"/>

    <TextView
        android:id="@+id/calls_filler_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Тут ничего нет"
        android:textSize="20sp"
        android:layout_below="@+id/calls_filler_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="пока..."
        android:textSize="20sp"
        android:layout_below="@id/calls_filler_text"/>

</RelativeLayout>